---
import Layout from "../../layouts/Layout.astro";

import { Image } from "astro:assets";
import runeIcon from "../../assets/images/apps/rune/icon.png";

const screenshots = [
    "/assets/rune-screen-1.png", // TODO: upload screenshot 1
    "/assets/rune-screen-2.png", // TODO: upload screenshot 2
    "/assets/rune-screen-3.png", // TODO: upload screenshot 3
];
---

<Layout>
    <div class="app-detail-container">
        <div class="app-header">
            <div class="app-icon-container">
                <Image
                    src={runeIcon}
                    alt="Rune App Icon"
                    class="app-icon"
                    width={240}
                    height={240}
                />
            </div>
            <div class="app-title-section">
                <h1 class="app-title">Rune</h1>
                <span class="beta-badge">Public Beta</span>
                <p class="app-tagline">
                    Distraction-free RSS Reader & Read-it-Later
                </p>
                <a
                    href="https://testflight.apple.com/join/8aN9vNmj"
                    class="download-button"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    View in TestFlight
                </a>
            </div>
        </div>

        <!-- Temporarily disable screenshots
        <div class="screenshots-container">
            <div class="screenshot-placeholder">Screenshot 1</div>
            <div class="screenshot-placeholder">Screenshot 2</div>
            <div class="screenshot-placeholder">Screenshot 3</div>
        </div>
        -->

        <div class="content-section">
            <section class="description">
                <h2>About Rune</h2>
                <p>
                    Rune is a privacy-focused RSS reader and read-it-later app
                    that helps you save, organize, and enjoy articles without
                    distractions.
                </p>
                <p>
                    Privacy by design: All your data is stored locally on your
                    device. No accounts, no tracking, no external servers.
                </p>
            </section>

            <section class="features">
                <h2>What you can do in this beta</h2>
                <ul>
                    <li>Save articles from any app using the share sheet</li>
                    <li>Subscribe to blogs and news sites via RSS feeds</li>
                    <li>
                        Organise articles with tags, including AI-powered
                        automatic tagging
                    </li>
                    <li>
                        Get AI-generated article summaries powered by Apple
                        Intelligence
                    </li>
                    <li>Search across all your saved content</li>
                    <li>Import your existing reading list from other apps</li>
                </ul>
            </section>

            <section class="feedback">
                <h2>I'd love your feedback on</h2>
                <ul>
                    <li>Overall reading experience and reliability</li>
                    <li>Feed discovery and subscription flow</li>
                    <li>Article parsing quality across different websites</li>
                    <li>
                        Performance and battery impact during background feed
                        refresh
                    </li>
                    <li>Any crashes or unexpected behaviour</li>
                </ul>
            </section>

            <section class="roadmap">
                <h2>Roadmap</h2>
                <p class="roadmap-disclaimer">
                    A living overview of the current product direction.
                    Priorities may shift as the app evolves.
                </p>
                <div class="roadmap-list">
                    <div class="roadmap-item">
                        <div class="roadmap-marker"></div>
                        <div class="roadmap-content">
                            Daily new articles summary
                        </div>
                    </div>
                    <div class="roadmap-item">
                        <div class="roadmap-marker"></div>
                        <div class="roadmap-content">
                            New article notifications
                        </div>
                    </div>
                    <div class="roadmap-item">
                        <div class="roadmap-marker"></div>
                        <div class="roadmap-content">Reader mode</div>
                    </div>
                    <div class="roadmap-item">
                        <div class="roadmap-marker"></div>
                        <div class="roadmap-content">Offline support</div>
                    </div>
                    <div class="roadmap-item">
                        <div class="roadmap-marker"></div>
                        <div class="roadmap-content">iPad device support</div>
                    </div>
                    <div class="roadmap-item">
                        <div class="roadmap-marker"></div>
                        <div class="roadmap-content">MacOS support</div>
                    </div>
                </div>
            </section>

            <section class="privacy">
                <h2>Privacy Policy</h2>
                <p>
                    Rune is designed with privacy at its core. I do not collect
                    any personal data. All your feeds, articles, and reading
                    history are stored locally on your device. I do not track
                    your reading habits or share your data with third parties.
                </p>
                <a href="/apps/rune/privacy" class="privacy-link"
                    >Read full Privacy Policy</a
                >
            </section>
        </div>
    </div>
</Layout>

<style>
    .app-detail-container {
        max-width: 700px; /* Readability width */
        margin: 0 auto;
        animation: fadeIn 0.5s ease-out;
    }

    .app-header {
        display: flex;
        align-items: flex-start;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    /* Icon Styles */
    .app-icon-container {
        width: 120px;
        height: 120px;
        flex-shrink: 0;
    }

    .icon-placeholder {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #333333, #000000);
        color: white;
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        font-family: var(--font-family-display);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .app-icon {
        width: 100%;
        height: 100%;
        border-radius: 24px;
        object-fit: cover;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .app-title-section {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .app-title {
        font-size: 3rem;
        margin: 0;
        line-height: 1;
        letter-spacing: -0.03em;
    }

    .beta-badge {
        display: inline-block;
        background-color: rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.1);
        padding: 0.2rem 0.6rem;
        border-radius: 50px;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-top: 0.5rem;
        color: var(--color-text-muted);
        font-weight: 500;
    }

    :global(.dark) .beta-badge {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.1);
    }

    .app-tagline {
        margin: 0.8rem 0 1.2rem;
        font-size: 1.1rem;
        color: var(--color-text-muted);
    }

    .download-button {
        background-color: var(--color-accent);
        color: var(--color-bg);
        padding: 0.7rem 1.4rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.2s ease;
        font-size: 0.95rem;
    }

    .download-button:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    /* Screenshots */
    .screenshots-container {
        display: flex;
        gap: 1rem;
        overflow-x: auto;
        padding-bottom: 2rem;
        margin-bottom: 2rem;
        scrollbar-width: none; /* Firefox */
    }

    .screenshots-container::-webkit-scrollbar {
        display: none; /* Chrome/Safari */
    }

    .screenshot-placeholder {
        min-width: 260px;
        height: 560px; /* ~ iPhone aspect ratio */
        background-color: rgba(0, 0, 0, 0.03);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--color-text-muted);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    @media (prefers-color-scheme: dark) {
        .screenshot-placeholder {
            background-color: rgba(255, 255, 255, 0.03);
            border-color: rgba(255, 255, 255, 0.05);
        }
    }

    /* Content */
    .content-section {
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    section h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid var(--color-border);
        padding-bottom: 0.5rem;
    }

    section p,
    section ul li {
        color: var(--color-text-muted);
        font-size: 1.05rem;
        line-height: 1.7;
    }

    section ul {
        padding-left: 1.2rem;
        margin: 0;
    }

    section ul li {
        margin-bottom: 0.5rem;
    }

    .privacy-link {
        display: inline-block;
        margin-top: 1rem;
        color: var(--color-text);
        text-decoration: underline;
        text-underline-offset: 4px;
        font-weight: 500;
    }

    .privacy-link:hover {
        color: var(--color-text-muted);
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 600px) {
        .app-header {
            flex-direction: column;
            text-align: center;
            align-items: center;
            gap: 1.5rem;
        }

        .app-title-section {
            align-items: center;
        }

        .app-tagline {
            margin-bottom: 1.5rem;
        }
    }

    /* Roadmap */
    .roadmap-disclaimer {
        font-size: 0.95rem !important;
        font-style: italic;
        margin-bottom: 2rem;
        opacity: 0.7;
        line-height: 1.5;
    }

    .roadmap-list {
        margin-top: 1.5rem;
        padding-bottom: 1rem;
    }

    .roadmap-item {
        position: relative;
        padding-bottom: 1.5rem;
        padding-left: 2rem;
    }

    .roadmap-item:last-child {
        padding-bottom: 0;
    }

    /* Vertical Line */
    .roadmap-item:not(:last-child)::after {
        content: "";
        position: absolute;
        left: 5px;
        top: 18px;
        bottom: -5px;
        width: 2px;
        background-color: var(--color-border);
        opacity: 0.8;
    }

    .roadmap-marker {
        position: absolute;
        left: 0;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background-color: var(--color-bg);
        border: 2px solid var(--color-text);
        z-index: 1;
    }

    .roadmap-content {
        font-size: 1.05rem;
        color: var(--color-text-muted);
        line-height: 1.5;
        transform: translateY(-2px);
    }
</style>
